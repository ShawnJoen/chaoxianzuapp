<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c12"
        android:paddingBottom="3px">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="로그인"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/c1"
            android:background="@color/c11"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <EditText
            android:id="@+id/mb_id"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/b_5"
            android:hint="아이디"/>
        <EditText
            android:id="@+id/mb_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/b_5"
            android:hint="비밀번호"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/c12"
        android:paddingBottom="3px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:background="@color/c1">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 보기"
                android:id="@+id/show_pw"
                android:textSize="12sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동 로그인"
                android:id="@+id/auto_login"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="6dp">
        <TextView
            android:id="@+id/login_button"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="로그인"
            android:gravity="center"
            android:textColor="@color/c1"
            android:background="@drawable/b_4"
            android:textSize="16sp"/><!--#4169E1-->
        <TextView
            android:id="@+id/close_button"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6px"
            android:text="취소"
            android:gravity="center"
            android:textColor="@color/c1"
            android:background="@drawable/b_2"
            android:textSize="14sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp">
        <TextView
            android:id="@+id/join_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="회원 가입"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/c1"
            android:background="@drawable/click3"
            android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>